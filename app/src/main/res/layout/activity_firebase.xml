<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FirebaseActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_firebase"
        android:textAlignment="center"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prueba instancia"
        android:textAlignment="center"
        android:layout_marginBottom="30sp"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:hint="Ingrese un mensaje"
        android:ems="10"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editTextTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:hint="Ingrese el destinatario"
        android:ems="10"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnPushFirebaseRealtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:textColor="@color/black"
        android:onClick="PushFirebaseRealtime"
        android:text="@string/set_data_to_firebase"/>

    <Button
        android:id="@+id/btnGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:textColor="@color/black"
        android:onClick="getMessageFirebase"
        android:text="@string/get_data_firebase"/>

</LinearLayout>